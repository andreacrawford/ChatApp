<!DOCTYPE html>
<html>
  <head>
    <title>Chatapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    <% if notice %>
      <div class="alert alert-info">
        <%= notice %>
      </div>
    <% elsif alert %>
      <div class="alert alert-warning">
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
