<div class="page-content">

  <div class="login-container">
    <header class="login-header">Log in</header>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control input-field", placeholder: "Email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-field", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-default submit-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div> <!-- end login container --> 
</div> <!-- end page content -->
